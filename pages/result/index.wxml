<view class="container" style="background: url('../../images/back9.jpg');">

    <view class='itemView-3'>
      <text class="itemGraph">图表形状</text>
      <picker class='graph' mode="selector" range="{{array}}" value="{{index}}" bindchange='listenerPickerSelected'>
        <text>{{array[index]}}</text>
      </picker>
    </view>

    <view class="itemView-1">

      <text class="itemText">开始时间</text>

      <picker class='date' mode="date" value="{{startDate}}" start="2017-09-26" end="2020-10-10" bindchange="listenerStartDatePickerSelected">
        <text>{{startDate}}</text>
      </picker>
    </view>

    <view class="itemView-2">

      <text class="itemText">结束时间</text>

      <picker class='date' mode="date" value="{{endDate}}" start="2017-09-26" end="2020-10-10" bindchange="listenerEndDatePickerSelected">
        <text>{{endDate}}</text>
      </picker>
    </view>
    
    <button class="confirm " type="default " size="default " bindtap='submit'>确认</button>

<view class='chart'>
    <text class="middle" decode="{{true}}" space="{{true}}">今天消费情况</text>
    <canvas canvas-id="myChart" class="canvas" bindtouchstart="touchHandler"></canvas>
</view>
</view>