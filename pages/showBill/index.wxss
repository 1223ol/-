#panel{
  height:5vh;
  background:#fff;
}

#panel text{
  line-height: 5vh;
  border-bottom: 1rpx solid #ddd;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 0.5;
}

.buttom{
    position: fixed;
    bottom: 0;
    width: 100%;
}