/* pages/workspace/workspace/schedule/schedule.wxss */

page {
  background-color: white;
  display: flex;

  justify-content: flex-start;
  
  font-size: 18px;
  height: 620px;
  overflow-y: scroll;
  
  position: relative;
}

.box {
  display: block;
  margin: 10px;
  height: 380px;
  border-style: solid;
  color: black;
  background-color: rgba(255, 255, 255, 0.7);
  border-color: rgba(0, 0, 0, 0.5);
  border-radius: 50px;
}



.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
  opacity: 1;
  
}

.item-content {
  border-radius: 40%;
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
  color: black;
  opacity: 1;
  
}


.item-content-current-day {
  flex-grow: 2;
}


.current-detail{
  height: 160px;
  margin: 10px;
  font-size: 1rem;
  border-style: solid;
  background-color: rgba(255, 255, 255, 0.7);
  border-color: rgba(0, 0, 0, 0.5);
  border-radius: 50px;
}


.current-consumption{
  width: 80%;
  height: 40px;
  position: absolute;
  left: 40px;
  top:470px;
}

.current-remainer{
  position: absolute;
  left:40px;
  width: 80%;
  height: 40px;
  top:530px;
}
