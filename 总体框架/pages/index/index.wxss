/* pages/workspace/workspace/schedule/schedule.wxss */

page {
  
  display: flex;
  height: 100vh;
  justify-content: flex-start;

  font-size: 18px;
  background-color:  	#ACD6FF;
  position: relative;
}

.box {
  display: block;
  margin: 10px;

  border-style: solid;
  color: black;
  background-color: rgba(255, 255, 255, 0.8);
  border-color: white;
  border-radius: 30px;
}



.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;

  
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
  opacity: 1;
    font-family:  	KaiTi;
}

.item-content {
  border-radius: 40%;
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
  color: black;
  opacity: 1;

}


.item-content-current-day {
  flex-grow: 2;
  width: 40vw;
}


.current-detail{
  display: block;
  font-family:  	KaiTi;
  position: absolute;
  height: 20%;
 width: 90vw;
  top:75%;
left: 5vw;
  font-size: 1rem;
  border-style: solid;
  background-color: rgba(255, 255, 255, 0.8);
  border-color: white;
  border-radius: 30px;
}


.current-consumption{
  width: 80%;
  height: 40px;
  position: absolute;
  left: 40px;
  top:15%;
}

.current-remainer{
  position: absolute;
  left:40px;
  width: 80%;
  height: 40px;
  top:60%;
}

.rightArrow{
  position: absolute;
  height: 30px;
  width: 30px;
  top: 4vh;
  right: 15%;
}


.leftArrow{
  position: absolute;
  height: 30px;
  width: 30px;
  top: 4vh;
  left: 15%;
}